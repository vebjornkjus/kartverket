@model KartverketWebApp.Models.RegisterViewModel

<link rel="stylesheet" href="~/css/Register.css">

<div class="register_main">
    <div class="register_container">
        
        <img id="kartverket_logo" src="~/images/standard_kartverket.png" alt="Kartverket Logo">

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All"></div>

            <div>
                <label asp-for="Fornavn"></label>
                <input asp-for="Fornavn" type="text" required />
            </div>

            <div>
                <label asp-for="Etternavn"></label>
                <input asp-for="Etternavn" type="text" required />
            </div>

            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" required />
            </div>
            
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" required />
            </div>
            
            <div>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" required />
            </div>
            
            <button type="submit" class="btn_register">Registrer deg</button>
        </form>
        
        <a class="btn_login" href="/Account/Login">Allerede registrert? Logg inn her</a>
    </div>
</div>
