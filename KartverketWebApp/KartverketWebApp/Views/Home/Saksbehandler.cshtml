@model KartverketWebApp.Models.CombinedViewModel

<table class="table">
    <thead>
        <tr>
            <th>Kart Tittel</th>
            <th>Innsender</th>
            <th>Kart</th>
            <th>Kommune</th>
            <th>Fylke</th>
            <th>Opprettet</th>
            <th>Rapport Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rapport in Model.Rapporter)
        {
            // Find the Stednavn entry with a matching KartEndringId
            var stednavn = Model.Stednavn.FirstOrDefault(s => s.KartEndringId == rapport.Kart?.KartEndringId);
            var url = Url.Action("RapportDetaljert", "Home", new { id = rapport.RapportId });

            <tr onclick="location.href='@url'" style="cursor:pointer">
                <td>@rapport.Kart?.Tittel</td>
                <td>@rapport.Person?.Fornavn @rapport.Person?.Etternavn</td>
                <td>@rapport.Kart?.MapType</td>
                <td>@stednavn?.Kommunenavn</td>
                <td>@stednavn?.Fylkesnavn</td>
                <td>@rapport.Opprettet.ToString("dd.MM.yyyy")</td>
                <td>@rapport.RapportStatus</td>
            </tr>
        }
    </tbody>
</table>
