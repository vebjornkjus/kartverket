@model KartverketWebApp.Models.PositionModel

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center">Takk for din rapport!</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card" style="border-radius: 11px; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                <div class="card-body">
                    <h5>Tittel</h5>
                    <p>@Model.Tittel</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" style="border-radius: 11px; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                <div class="card-body">
                    <h5>Beskrivelse</h5>
                    <p>@Model.Beskrivelse</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" style="border-radius: 11px; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                <div class="card-body">
                    <h5>Rapporttype</h5>
                    <p>@Model.RapportType</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div id="map_corrections" style="height: 400px; width: 100%; border-radius: 11px; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; overflow: hidden;"></div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="~/js/takkRapport.js"></script>
    <style>
    .leaflet-marker-icon {
        background: none;
        border: none;
    }
    /* Fjern blå sirkel rundt markør */
    .leaflet-marker-shadow {
        display: none;
    }
</style>
    <script>
        window.appData = {
            mapData: @Html.Raw(Json.Serialize(new
            {
                mapType = Model.MapType,
                coordinates = Model.Coordinates.Select(k => new { nord = k.Nord, ost = k.Ost }).ToList()
            }))
        };

        document.addEventListener('DOMContentLoaded', () => {
            window.takkRapport = new TakkRapport(window.appData);
        });
    </script>
}